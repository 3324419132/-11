/* pages/User/userPage/userPage.wxss */
page{
  background-color: #f5f5f5;
}

.header{
  height: 20vw;
  width: 100vw;
  display: flex;
  align-items: center;

  background-color: white;
  /* background: yellow; */
}

.login_btn{
  margin-top: 500rpx;
}
.login{
  font-size: 45rpx;
  color: blue;
  margin-top: 1rpx;
}
.login_out{
  position: absolute;
  bottom: 20vw;
  left: 30vw;
  font-size: 4.2vw;
  width: 40vw;
  height: 13vw;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 3vw;
  background: linear-gradient(to right,rgb(247, 178, 170),
  rgb(255, 201, 195),rgb(253, 202, 196),rgb(255, 201, 195),rgb(247, 178, 170));

}
.avatar{
  width: 12vw;
  height: 12vw;
  border-radius: 6vw;
  position: absolute;
  border: 1rpx solid rgb(236, 236, 236);
  top: 0vw;
  left: 0vw;
  z-index: 2;
}
.avatar-wrapper{
  width: 12vw;
  height: 12vw;
  border-radius: 6vw;
  background-color: white;
  position: absolute;
  top: 0vw;
  left: 0vw;
  z-index: 3;
  opacity: 0;
}

.right_arrow{
  border:solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right:15px;
  transform:rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  color: rgb(78, 78, 78);
}

.item{
  background: white;
  padding: 5vw;
  display: flex;
  align-items:center;
  border-bottom: 1px solid gray;
  font-size: large;
}

.button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin:0px;
  line-height: 1.3;
  font-size: 16px;
  color: rgb(78, 78, 78);
}
.button::after{
  border: none;
  border-radius: 0;
}
