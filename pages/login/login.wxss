

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.input-container {
  width: 80%;
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  outline: none;
}

button {
  width: 80%;
  padding: 10rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  text-align: center;
  cursor: pointer;
}

button:active {
  background-color: #0056b3;
}
