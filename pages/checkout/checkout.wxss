/* 在 checkout.wxss 中 */

.title {
  font-size: 24px;
  font-weight: bold;
  margin: 10px;
}

.order-item {
  border: 1px solid #ddd;
  padding: 10px;
  margin: 10px;
  background-color: #fff;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.order-info .name {
  font-size: 18px;
  font-weight: bold;
}
.order-info .style {
  font-size: 16px;
  font-weight: bold;
  color: blue;
}

.quantity {
  font-size: 16px;
  color: #333; /* 可以自定义颜色 */
}

.price {
  font-size: 16px;
}

.subtotal {
  font-size: 16px;
  color: #e74c3c; /* 可以自定义颜色 */
}

.total-price {
  font-size: 20px;
  font-weight: bold;
  margin: 10px;
}


.input-container {
  margin-top: 20px;
}

.input-container input,
.input-container textarea {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
}

/* 确认订单按钮样式 */
.confirm-button {
  width: 100%;
  padding: 15px;
  background-color: #007AFF; /* 设置按钮背景颜色 */
  color: #fff;
  text-align: center;
  font-size: 18px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

/* 可以根据需求自定义样式，如按钮悬浮效果等 */
.confirm-button:hover {
  background-color: #0056b3; /* 鼠标悬浮时的颜色 */
}

